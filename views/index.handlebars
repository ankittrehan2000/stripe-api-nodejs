<section class="py-2">
    <div class="row">
        <div class="col-md-6 text-center">
            <h1 class="display-3 mt-3 pt-5">
                Bunch of Products for Sale 
            </h1>
            <p class="lead">
                Buy a lot of products
            </p>
            <form action="/charge" method="POST">
            <script
            src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="{{stripePublishableKey}}"
            data-amount="125"
            data-name="Products"
            data-description="Ebook written by Brad Traversy"
            data-image="/img/product.jpeg"
            data-locale="auto">
            </script>
        <script>
          // Hide default stripe button
          document.getElementsByClassName('stripe-button-el')[0].style.display = 'none';
        </script>
        <button type="submit" class="btn btn-outline-dark text-white btn-lg">Purchase For $1.25</button>
      </form>
        </div>
        <div class="col-md-6">
            <img src="/img/marketplace.jpg" class="img-fluid">
        </div>
    </div>
</section>